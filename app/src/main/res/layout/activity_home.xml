<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_settings_black_24dp" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/ic_chat_black_24dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#19AF9D" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:text="@string/app_name"
            android:textColor="#ffff"
            android:textSize="16sp"
            android:textStyle="italic" />

        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" />


        <TextView
            android:id="@+id/titlecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_flipper"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:padding="2dp"
            android:text="What do you need help with?"
            android:textColor="#19AF9D"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlecategory"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/ac"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ac" />

            <Button
                android:id="@+id/electrician"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/electrician" />

            <Button
                android:id="@+id/appliances"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/appliances" />

            <Button
                android:id="@+id/tv"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/ac"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv" />

            <Button
                android:id="@+id/plumber"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/appliances"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/plumber" />

            <Button
                android:id="@+id/referigerator"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/electrician"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/refrigerator" />

            <Button
                android:id="@+id/carpenter"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/tv"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/carpenter" />

            <Button
                android:id="@+id/computer"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/referigerator"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/computer" />

            <Button
                android:id="@+id/painting"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/plumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/painting" />

            <Button
                android:id="@+id/carwash"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/carpenter"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/carwash" />

            <Button
                android:id="@+id/mobile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/computer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/mobile" />

            <Button
                android:id="@+id/pestcontrol"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/painting"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pestcontrol" />

            <Button
                android:id="@+id/homesecurity"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/carwash"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/homesecurity" />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>