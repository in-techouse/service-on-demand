<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SubmitComplain">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:text="Enter your complain here."
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/submit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Your complain description here..."
                android:inputType="textMultiLine"
                android:minLines="5"
                android:padding="3dp" />

            <Button
                android:id="@+id/submitcomplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submitcomplain"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryDark"
                android:text="Submit Complain"
                android:textColor="#ffff" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>